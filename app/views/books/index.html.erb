<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>

  <tbody>
    <%= @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', 'book_path', method: :get %></td>
        <td><%= link_to "Edit", 'edit_book_path' %></td>
        <td>
          <%= link_to "Destroy", 'book_path', method: :delete,
          data: {confirm: "Are you sure?", commit: "OK", cancel: "キャンセル"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book', method: :post %>
<% end %>
