<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <div class="field">
    <p class="field-title">Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <p class="field-title">Body</p>
    <%= f.text_area :body %><br>
  </div>
  <div class="update"><%= f.submit 'Update Book' %><br></div>
  <%= link_to 'Show', book_path(@book.id) %>
  <%= link_to 'Back', books_path %>
<% end %>
